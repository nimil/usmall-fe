/* pages/user-register/user-register.wxss */

.container {
  padding: 0 32rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 48rpx;
  padding-top: 40rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 表单容器 */
.form-container {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 头像选择 */
.avatar-section {
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f5f5f5;
  border: 4rpx solid #f0f0f0;
  padding: 0;
  margin: 0;
  transition: all 0.2s ease;
}

.avatar-wrapper:active {
  transform: scale(0.95);
  border-color: #07c160;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}



/* 昵称输入 */
.nickname-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.nickname-input:focus {
  border-color: #07c160;
}

.nickname-input::placeholder {
  color: #999;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 32rpx;
  transition: all 0.2s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  background: #06ad56;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #999;
  transform: none;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 说明文字 */
.notice {
  padding: 32rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  text-align: center;
}
