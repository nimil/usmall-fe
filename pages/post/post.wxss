/* pages/post/post.wxss */

/* 顶部操作栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.cancel-btn {
  color: #666666;
  font-size: 28rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.publish-btn {
  color: #cccccc;
  font-size: 28rpx;
  font-weight: 500;
}

.publish-btn.active {
  color: #07c160;
}

/* 内容区域 */
.content-area {
  padding: 24rpx;
}

/* 分类选择器 */
.category-selector {
  margin-bottom: 32rpx;
}

.label {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  display: block;
  margin-bottom: 16rpx;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.category-item {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #f0f0f0;
  color: #666666;
  border-radius: 20rpx;
  font-size: 26rpx;
  transition: all 0.2s ease;
  gap: 8rpx;
}

.category-icon {
  font-size: 28rpx;
}

.category-name {
  font-size: 26rpx;
}

.category-count {
  font-size: 22rpx;
  color: #999;
  margin-left: 4rpx;
}

.category-item.active {
  background: #07c160;
  color: #ffffff;
}

.loading-container {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 输入组 */
.input-group {
  margin-bottom: 32rpx;
  position: relative;
}

.title-input {
  width: 100%;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
  border-bottom: 1rpx solid #f0f0f0;
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  border-bottom: 1rpx solid #f0f0f0;
}

.char-count {
  position: absolute;
  right: 0;
  bottom: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

/* 图片上传 */
.image-upload {
  margin-bottom: 32rpx;
}

.upload-status {
  text-align: center;
  padding: 20rpx 0;
  margin-top: 16rpx;
}

.upload-text {
  font-size: 26rpx;
  color: #07c160;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.upload-success {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #07c160;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.success-icon {
  font-weight: bold;
}

.upload-loading {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #ff9500;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.loading-icon {
  font-weight: bold;
}

.add-image-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #cccccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999999;
}

.add-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
}

/* 标签输入 */
.tag-input {
  width: 100%;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333333;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 标签展示 */
.tags-display {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

.tag-text {
  margin-right: 8rpx;
}

.tag-delete {
  font-size: 20rpx;
  font-weight: bold;
} 