/* pages/detail/detail.wxss */

/* 全局按钮样式重置 */
button {
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

button::after {
  border: none;
}

/* 容器样式 */
.container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 帖子内容区域 */
.post-content {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 帖子头部 */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.author-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #f0f0f0;
}

.author-details {
  flex: 1;
}

.author-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.verified-badge {
  background: #07c160;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 50%;
  margin-left: 12rpx;
}

.author-level {
  font-size: 24rpx;
  color: #ff6b35;
  background: rgba(255, 107, 53, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.post-meta {
  text-align: right;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.post-category {
  font-size: 22rpx;
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 帖子主体 */
.post-body {
  margin-bottom: 32rpx;
}

.post-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.4;
  margin-bottom: 24rpx;
  display: block;
}

.post-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 24rpx;
  display: block;
}

/* 图片展示 */
.post-images {
  margin-bottom: 24rpx;
}

.post-image {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 标签 */
.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag {
  background: #f0f2f5;
  color: #666;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 互动区域 - 小红书风格 */
.post-interaction {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.interaction-actions {
  display: flex;
  gap: 60rpx;
  align-items: center;
  margin-left: 40rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.2s ease;
  padding: 0;
  border-radius: 8rpx;
  width: 60rpx;
  height: 80rpx;
  box-sizing: border-box;
}

.action-item:active {
  background: rgba(0, 0, 0, 0.05);
  transform: scale(0.95);
}

.action-icon {
  font-size: 40rpx;
  line-height: 1;
  display: block;
  text-align: center;
}

.action-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  text-align: center;
  min-width: 40rpx;
  line-height: 1.2;
}

/* 小红书风格点赞状态 */
.action-item.liked .action-icon {
  color: #ff4757;
}

.action-item.liked .action-text {
  color: #ff4757;
  font-weight: 600;
}

/* 未点赞状态 - 白色/浅色 */
.action-item:not(.liked) .action-icon {
  color: #ccc;
}

.action-item:not(.liked) .action-text {
  color: #999;
}

/* 浏览量显示 */
.view-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
}

.view-icon {
  font-size: 24rpx;
  color: #999;
}

.view-text {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 评论区域 */
.comments-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: block;
}

.comment-list {
  margin-top: 24rpx;
}

.comment-item {
  display: flex;
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.comment-author {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.comment-actions {
  display: flex;
  gap: 32rpx;
}

.comment-action {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 0;
}

.comment-action:active {
  color: #07c160;
}

/* 评论空状态 */
.empty-comments {
  text-align: center;
  padding: 60rpx 40rpx;
}

/* 底部安全区域 */
.safe-area-bottom {
  height: 120rpx;
}

/* 评论输入框容器 */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.comment-input-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.comment-input {
  flex: 1;
  background: #f7f8fa;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e8e8e8;
}

.comment-input:focus {
  border-color: #07c160;
  background: #fff;
}

.send-btn {
  color: #ccc;
  font-size: 28rpx;
  font-weight: 500;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
  transition: all 0.2s ease;
}

.send-btn.active {
  color: #fff;
  background: #07c160;
}

.send-btn.active:active {
  transform: scale(0.95);
} 