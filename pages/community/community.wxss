/* pages/community/community.wxss */

/* 分类标签 */
.category-tabs {
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.loading-container {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.tabs-scroll {
  white-space: nowrap;
  padding: 0 24rpx;
}

.tab-item {
  display: inline-flex;
  align-items: center;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  transition: all 0.2s ease;
  gap: 8rpx;
}

.tab-icon {
  font-size: 32rpx;
}

.tab-name {
  font-size: 28rpx;
}

.tab-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.tab-item.active {
  color: #07c160;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

/* 帖子列表 */
.post-list {
  padding: 0 32rpx;
}

/* 帖子卡片 */
.post-item {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.post-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 帖子头部 */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.author-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #f0f0f0;
}

.author-details {
  flex: 1;
}

.author-name {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.verified-badge {
  font-size: 24rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  margin-left: 12rpx;
  font-weight: bold;
}

.author-level {
  font-size: 24rpx;
  color: #ff6b35;
  background: #fff5f2;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 24rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.post-excerpt {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 帖子图片 */
.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

/* 帖子标签 */
.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tag {
  font-size: 24rpx;
  color: #ff6b35;
  background: #fff5f2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ffe4d6;
}

/* 帖子统计 */
.post-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  transition: background-color 0.2s ease;
}

.stat-item:active {
  background: #f8f9fa;
}

.stat-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  transition: transform 0.2s ease;
}

.stat-icon.liked {
  transform: scale(1.1);
}

.stat-count {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.load-more-text {
  font-size: 28rpx;
  color: #666;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 悬浮发布按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 96rpx;
  height: 96rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  z-index: 100;
  transition: all 0.2s ease;
}

.fab:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
}

.fab-icon {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: 300;
} 